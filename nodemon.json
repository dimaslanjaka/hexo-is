{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "yarn run build && yarn run pack",
  "watch": [
    "./src/**/*.ts",
    "./src/**/*.xml",
    "./src/**/*.xsl"
  ],
  "ignore": [
    "*.test.js",
    ".vscode",
    ".gitignore",
    "gh-pages",
    "**/dist/**",
    "tests",
    "**/node_modules/**",
    "test",
    "tmp",
    "temp",
    "**/tmp/**"
  ],
  "delay": 3000,
  "ext": "js,cjs,mjs,ts,xml,xsl",
  "verbose": false
}
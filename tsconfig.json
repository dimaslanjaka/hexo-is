{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "./",
    "outDir": "./tmp/dist",
    "declaration": true,
    "declarationDir": "./tmp/dist",
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/node_modules/**",
    "tmp"
  ],
  "include": [
    "src"
  ]
}